Package: SSNbayes
Type: Package
Title: Bayesian Spatio-Temporal Analysis in Stream Networks
Version: 0.1.0
Authors@R: c(person("Edgar", "Santos-Fernandez", role = c("aut", "cre","cph"),
                      email = "santosfe@qut.edu.au",
                       comment = c(ORCID = "0000-0001-5962-5417")) )
Depends: 
    R (>= 4.0.0)
Imports:
    plyr,
    dplyr,
    rstan,
    mtsdi,
    sf,
    methods,
    SSN2,
    sfnetworks,
    igraph,
    geosphere,
    osmdata,
